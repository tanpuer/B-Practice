<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:gravity="center"
              android:layout_marginTop="@dimen/home_region_margin_top"
    >

    <ImageView
        android:id="@+id/home_region_img"
        android:layout_width="@dimen/home_region_image_size"
        android:layout_height="@dimen/home_region_image_size"
        />

    <TextView
        android:id="@+id/home_region_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
