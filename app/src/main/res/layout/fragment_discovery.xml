<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    >
    <android.support.v7.widget.RecyclerView
        android:id="@+id/discovery_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_discovery_recyclerview_height_small">
    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/discovery_tag_txt_bg"
            android:layout_marginStart="@dimen/home_discovery_tag_margin"
            />
        <TextView
            android:id="@+id/discovery_tag_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_margin="@dimen/home_discovery_tag_margin"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/discovery_tag_txt_bg"
            android:layout_marginEnd="@dimen/home_discovery_tag_margin"
            />
    </LinearLayout>

    <include
        android:id="@+id/loading_view"
        layout="@layout/loading_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />

    <include
        android:id="@+id/error_view"
        layout="@layout/error_view"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:visibility="gone"
        />

</LinearLayout>