<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_marginBottom="@dimen/home_live_entrance_margin"
    >
    <ImageView
        android:id="@+id/live_entrance_img"
        android:layout_width="@dimen/home_live_entrance_image_size"
        android:layout_height="@dimen/home_live_entrance_image_size"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/home_live_entrance_image_margin"
        />

    <TextView
        android:id="@+id/live_entrance_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/home_live_entrance_text_margin"
        android:textSize="@dimen/home_live_entrance_text_size"
        />

</LinearLayout>
